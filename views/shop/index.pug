extends ../layouts/_layoutPage
block content
  .row.h-50.pl-4
    .row-md-8.w-75
      #demo.carousel.slide(data-ride='carousel')
        // Indicators
        ul.carousel-indicators
          li.active(data-target='#demo', data-slide-to='0')
          li(data-target='#demo', data-slide-to='1')
          li(data-target='#demo', data-slide-to='2')
        // The slideshow
        .carousel-inner
          .carousel-item.active
            img(src='https://loremflickr.com/500/150/girl/all')
          .carousel-item
            img(src='https://loremflickr.com/500/160/girl/all')
          .carousel-item
            img(src='https://loremflickr.com/500/155/girl/all')
          // Left and right controls
          a.carousel-control-prev(href='#demo', data-slide='prev')
            span.carousel-control-prev-icon
          a.carousel-control-next(href='#demo', data-slide='next')
            span.carousel-control-next-icon
    .row.w-25.pl-2
      .col-12.h-50.w-100
        img.h-100.w-100.pb-1(src='https://loremflickr.com/300/160/girl/all')
      .col-12.h-50
        img.h-100.w-100.pt-1(src='https://loremflickr.com/300/150/girl/all')
  .container.bg-white
    .d-flex.mt-2
      .col-2
      .col-10.d-flex.justify-content-between
        .col-8.mt-2.text-bole
          i.fas.fa-home 
          b   Home 
          |/ 
          b Shop
        .col-4.d-flex.justify-content-end
          .text-center
            select.mr-2#perPage(name='perPage')
              //- a(href="/shop?perPage=4")  4
              option(value='4') 4
              option(value='8') 8
              option(value='12') 12
              option(value='16') 16
            label.mt-2(for='perPage') product/page
    .row
      .col-md-2
        .list-group
          .list-group-item
            a category 1
          .list-group-item
            a category 2
          .list-group-item
            a category 3
        .list-group
          .list-group-item
            a category 1
          .list-group-item
            a category 2
          .list-group-item
            a category 3
        .list-group
          .list-group-item
            a category 1
          .list-group-item
            a category 2
          .list-group-item
            a category 3
        .list-group
          .list-group-item
            a category 1
          .list-group-item
            a category 2
          .list-group-item
            a category 3
      .col-md-10
        .row
          each product in products
            .col-sm-6.col-md-3.mb-3
              .card
                .h-75
                  img.card-img-top.img-responsive(src=''+ product.image + product.h +'/girl/all' , alt='Card image', height='230')
                .card-body
                  h5.card-title
                    p=product.name
                  .card-text.d-flex.justify-content-between
                    h6 
                      del.font-italic="price: $"+product.oldPrice
                    h4
                      .badge.badge-Warning="$"+product.price
                  .d-flex.justify-content-between
                    button.btn.btn-success(href='#')
                      i.fas.fa-shopping-cart
                    a.ml-3.btn.btn-primary(href='#') detail
        .row.mt-3
          .col-6
            p.page-item.mt-2.ml-2
                b page: 
                span=page
                |   / 
                span=totalPage 
          .col-6
            ul.pagination.justify-content-end
              li.page-item
                a.page-link(href='/shop?page='+ (page-1) ) &laquo;
              li.page-item.active
                a.page-link(href=''+ a[0])
                  .p=page
              li.page-item
                a.page-link(href=''+ a[1]) 
                  .p=page+1
              li.page-item
                a.page-link(href=''+ a[2] )
                  .p=page+2
              li.page-item
                a.page-link(href=''+ a[3]) 
                  .p=page+3
              li.page-item
                a.page-link(href=''+ a[4] )
                  .p=page+4
              li.page-item
                a.page-link(href=''+ a[5] )
                  .p=page+5
              li.page-item
                a.page-link(href=''+ a[1]) &raquo;
        
