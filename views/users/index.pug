extends ../layouts/_layoutPage
block content
  h1 USER LIST
  .d-flex.align-items-center
    a.btn.btn-primary.mb-auto(href= 'users/create') New
    form.form-group.d-flex.ml-auto(action = "/search")
      input.form-control(type = "text" name = "q", value= value, placeholder='search user')
      button.btn.btn-primary.ml-1 Search
  table.table  
    tr
      th Name
      th Phone
      th Actions
    each user in users
      tr
        td= user.name 
        td= user.phone 
        td
          a.btn.btn-ligth(href= '/users/' + user.id) view