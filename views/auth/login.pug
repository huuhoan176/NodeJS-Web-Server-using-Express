extends ../layouts/_layoutPage
block content

    .container.h-75.text-center.d-flex.justify-content-center.align-items-center
        form.form-signin.col-sm-4(action= "/auth/login", method= "POST")
            img.rounded.mb-4(src='/images/logo.png', alt='', width='72', height='72')
            h1.h3.mb-3.font-weight-normal Please sign in
            if err
                each item in err
                    .alert.alert-danger= item
            .input-group.mb-3
                .input-group-prepend
                    span#inputGroup-sizing-default.input-group-text
                        i.fa.fa-envelope
                input.form-control(type='email', name="email",placeholder= 'Email address', required='', autofocus='', value= values ? values.name : '', aria-label='Default', aria-describedby='inputGroup-sizing-default')
            .input-group.mb-3
                .input-group-prepend
                    span#inputGroup-sizing-default.input-group-text
                        i.fa.fa-key
                input.form-control(type='password', name="password",placeholder= 'password', required='', autofocus='', value= values ? values.name : '', aria-label='Default', aria-describedby='inputGroup-sizing-default')

            label
                input(type='checkbox', value='remember-me')
                |  Remember me
            button.btn.btn-lg.btn-primary.btn-block Sign in
