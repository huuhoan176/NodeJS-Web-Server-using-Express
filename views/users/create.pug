extends ../layouts/_layoutPage
block content
  h1 create
  if err
    each item in err
      .alert.alert-danger= item
  form(action= "/users/create", method= "POST")
    .form-group
      label(for="name") Name
      input#name.form-control(type= "text" name= "name" value= values ? values.name : '')
    .form-group  
      label(for="phone") Phone
      input#phone.form-control(type= "text" name= "phone" value= values ? values.phone : '')
    .form-group
      label(for="email") email
      input#name.form-control(type= "text" name= "email" value= values ? values.email : '')
    .form-group  
      label(for="password") password
      input#phone.form-control(type= "password" name= "password" value= values ? values.password : '')
    button.btn.btn-primary Create
