extends ../layouts/_layoutPage
block content

    .container.h-75.text-center.d-flex.justify-content-center.align-items-center
        form.form-signin.col-sm-4(action= "/auth/login", method= "POST")
            img.rounded.mb-4(src='/images/logo.svg', alt='', width='72', height='72')
            h1.h3.mb-3.font-weight-normal Please sign in
            if err
                each item in err
                    .alert.alert-danger= item
            label.sr-only(for='inputEmail') Email address
            input#inputEmail.form-control(type='email',name='email', placeholder='Email address', required='', autofocus='', value= values ? values.name : '')
            label.sr-only(for='inputPassword') Password
            input#inputPassword.form-control(type='password',name='password' placeholder='Password', required='', value= values ? values.name : '')
            .checkbox.mb-3
            label
                input(type='checkbox', value='remember-me')
                |  Remember me
            button.btn.btn-lg.btn-primary.btn-block Sign in
